@{
    ViewData["Title"] = "User";
}
<style>
    .tela-inteira {
       background: #000000;
       width: 100%;
       height: 100%;
    }

    .cabecalho{
        width: 100%;
        height:50%;
        background: #ffffff;
        text-align:center;
        background-image: linear-gradient(to bottom, #471320, #000000);
        position: relative;

    }

    .img-cabecalho {
        width: 70%;
        height: 100%;
    }

    .container {
        position: relative;
        width: 100%;
    }


    .container .texto {
        position: absolute;
        top: 62%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: #ffffff;
        padding: 10px;
        font-size: 50px;
    }

    h1{
        position:center;
        text-align: center;
        font-size: 50px;
        font-family:Amaranth;
        text-shadow: 5px 5px 5px black;
    }

    h2{
        position:absolute;
        margin:0;
        text-align:center;
        font-size: 20px;
        font-family:Montserrat;
        color: #ffffff;
        padding-left:24%;
        padding-top:0.6%;
    }

    .meio{
        
        text-align:center;
        background: #000000;
        margin-top: 65px;
        padding: 20px 0px 0px 0px;
        display:flex;
        height:80px;
    }


    .search-box{
        position:absolute;
        left:39%;
        background: none;
        height:40px;
        padding:10px;
        border: 1px solid white;
        border-radius:15px;
        display:flex;
        justify-content:space-between;
        align-items:center;
        margin-top: 55px;
        width: 550px;
    }

    .search-txt{
        border:none;
        background:none;
        outline:none;
        padding:0;
        color:#f0f5fb;
        font-size:16px;
        line-height:40px;
        width:500px;
        padding: 0 6px;
    }

    .search-btn{
        width:40px;
        height:40px;
        border-radius: 50%;
        background: none;
        display:flex;
        justify-content:center;
        align-items: center;
        transition: .5s;
    }

    

    

    .add-box{
        position:absolute;
        left:68%;
        background: none;
        height:28px;
        padding:10px;
        border: 1px solid green;
        border-radius:10px;
        display:flex;
        justify-content:space-between;
        align-items:center;
        margin-top:0.5%;
    }

    .add-txt{
        margin:0;
        border:none;
        background:none;
        outline:none;
        padding:0;
        color:#f0f5fb;
        font-size:16px;
        line-height:40px;
    }

    .add-btn{
        width:24px;
        height:40px;
        border-radius: 50%;
        background: none;
        display:flex;
        justify-content:center;
        align-items: center;
        
    }




  

</style>

<body>
    <div class="tela-inteira">
        <div class="cabecalho">
            <div class="container">
              <img src="~/images/coqueteis.png" alt="drinks" class="img-cabecalho"> 
              <div class="texto"><h1>INSUMOS</h1></div>
            </div>       
        </div>
        <div class="meio">
            <h2>Insumos Gerais</h2>
            <div  class="add-box">
                <a href="#" class="add-btn">
                    <img src="~/images/icon-mais.svg" alt="mais" height="15px" width="15px">
                </a>
                <p style="color:green" class="add-txt">Adicionar</p>
             </div>
            <div class="search-box">
                <input type="text" class="search-txt" placeholder="">
                <a href="#" class="search-btn">
                    <img src="~/images/lupa.svg" alt="lupa" height="20px" width="20px">
                </a>
                
            </div>
            
        </div>
    </div>
</body>

