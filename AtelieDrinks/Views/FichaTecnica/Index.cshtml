@model IEnumerable<AtelieDrinks.Models.Ficha_tecnica>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome_drink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nome_base_alcoolica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nome_insumo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.custo_insumo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.custo_base_alcoolica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.medida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ml_unidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valor_ficha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome_drink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome_base_alcoolica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome_insumo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.custo_insumo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.custo_base_alcoolica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.medida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ml_unidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valor_ficha)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_ficha">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id_ficha">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id_ficha">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
