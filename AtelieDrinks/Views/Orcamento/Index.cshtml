@model IEnumerable<AtelieDrinks.Models.Orcamento>

@{
    ViewData["Title"] = "Index";
}

<div class="adicionar">
    <a href="@Url.Action("Create")" class="btn btn-success">
        <i class="fas fa-plus-circle"></i> Adicionar
    </a>
</div>

<div class="row py-5">
    <div class="col-lg-15 mx-auto">
        <div class="card rounded shadow border-0">
            <div class="card-body1 p-5 bg-white rounded">
<div class="table-responsive">
    <table id="dtBasicExample" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Number of People</th>
                <th>Operational Cost</th>
                <th>Total Input Cost</th>
                <th>Total Cost</th>
                <th>Budget Base</th>
                <th>Commercial Commission</th>
                <th>Management Commission</th>
                <th>Primary Value</th>
                <th>Cost per Person</th>
                <th>Rounded Up Value</th>
                <th>Negotiation Margin</th>
                <th>Budget Value</th>
                <th>Expected Profit</th>
                <th>Number of Guests</th>
                <th>Number of Drinks</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.numero_pessoas)</td>
                    <td>@Html.DisplayFor(modelItem => item.custo_operacional)</td>
                    <td>@Html.DisplayFor(modelItem => item.custo_total_insumos)</td>
                    <td>@Html.DisplayFor(modelItem => item.custo_total)</td>
                    <td>@Html.DisplayFor(modelItem => item.base_orcamento)</td>
                    <td>@Html.DisplayFor(modelItem => item.comissao_comercial)</td>
                    <td>@Html.DisplayFor(modelItem => item.comissao_gerencia)</td>
                    <td>@Html.DisplayFor(modelItem => item.valor_primario)</td>
                    <td>@Html.DisplayFor(modelItem => item.custo_por_pessoa)</td>
                    <td>@Html.DisplayFor(modelItem => item.valor_arredondado_pra_cima)</td>
                    <td>@Html.DisplayFor(modelItem => item.margem_negociacao)</td>
                    <td>@Html.DisplayFor(modelItem => item.valor_orcamento)</td>
                    <td>@Html.DisplayFor(modelItem => item.previsao_lucro)</td>
                    <td>@Html.DisplayFor(modelItem => item.qtde_convidados)</td>
                    <td>@Html.DisplayFor(modelItem => item.qtde_drinks)</td>
                    <td>
                         <a asp-action="Edit" asp-route-id="@item.id_orcamento"><i class="fas fa-edit"></i></a> 
                    </td>
                    <td>
                         <a asp-action="Details" asp-route-id="@item.id_orcamento"><i class="fas fa-info-circle"></i></a> 
                    </td>
                    <td>
                         <a asp-action="Delete" asp-route-id="@item.id_orcamento"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
            </div>
        </div>
    </div>
</div>



